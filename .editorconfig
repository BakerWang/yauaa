root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.java]
indent_size = 4

[*.yaml]
indent_size = 2

[*.xml]
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

